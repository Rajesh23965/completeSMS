<!-- views/partials/header.ejs -->
<header class="header">

    <div class="header-left">
        <img src="/assets/default.png" alt="Logo" class="logo">

        <!-- Sidebar Toggle -->
        <div class="icon-box" id="sidebar-toggle">
            <i class="fas fa-bars"></i>
        </div>

        <!-- Full Screen -->
        <div class="icon-box">
            <i class="fas fa-expand" id="fullscreen-toggle"></i>
            <span class="tooltip-text">Screen toggle</span>
        </div>

        <!-- App Grid -->
        <div class="icon-box dropdown-trigger" data-dropdown="appsMenu">
            <i class="fas fa-th"></i>
        </div>

        <div id="appsMenu" class="dropdown-menu header-menubox">
            <div class="qk-menu-p">
                <div class="menu-icon-grid">
                    <a href="#"><i class="fas fa-users"></i> Student Admission</a>
                    <a href="#"><i class="fas fa-donate"></i> Salary Payment</a>
                    <a href="#"><i class="fas fa-fill-drip"></i> Leave Application</a>
                    <a href="#"><i class="fas fa-video"></i> Live Class Rooms</a>
                    <a href="#"><i class="fas fa-hand-holding-usd"></i> Due Fees</a>
                    <a href="#"><i class="fab fa-wpforms"></i> Fees Invoice</a>
                </div>
            </div>
        </div>

        <!-- Search Box -->
        <div class="search-box">
            <input type="text" placeholder="Search">
            <i class="fas fa-search"></i>
        </div>
    </div>

    <div class="header-right">

        <!-- Home Page -->
        <div class="icon-box">
            <a href="/" target="_blank" class="header-menu-icon">
                <i class="fas fa-globe"></i>
                <span class="tooltip-text">Visit Home Page</span>
            </a>
        </div>

        <!-- Academic Session -->
        <div class="icon-box dropdown-trigger" data-dropdown="sessionMenu">
            <i class="fas fa-calendar"></i>
        </div>

        <div id="sessionMenu" class="dropdown-menu">
            <ul class="dropdown-user">
                <li><strong>Academic Session</strong></li>
                <li>2078</li>
                <li>2079</li>
                <li>2080</li>
                <li>2081</li>
                <li>2082</li>
            </ul>
        </div>

        <!-- Language -->
        <div class="icon-box dropdown-trigger" data-dropdown="langMenu">
            <i class="fas fa-flag"></i>
        </div>

        <div id="langMenu" class="dropdown-menu">
            <ul class="dropdown-user">
                <li><strong>Language</strong></li>
                <li>English</li>
                <li>नेपाली</li>
            </ul>
        </div>

        <!-- Notifications -->
        <div class="icon-box dropdown-trigger" data-dropdown="notifyMenu">
            <i class="fas fa-bell"></i>
        </div>

        <div id="notifyMenu" class="dropdown-menu">
            <p>You do not have any message</p>
        </div>

        <!-- User Profile -->
        <div class="userbox">
            <div class="icon-box dropdown-trigger" data-dropdown="userMenu">
                <img src="/assets/demo.jpeg" class="profile-img" height="35">
            </div>

            <div id="userMenu" class="dropdown-menu user-dropdown">
                <ul class="dropdown-user">
                    <li>
                        <div class="dw-user-box">
                            <img src="/assets/demo.jpeg" class="u-img">
                            <div class="u-text">
                                <h2>Demo Admin</h2>
                                <p class="text-muted">Admin</p>
                            </div>
                        </div>
                    </li>
                    <li><i class="fas fa-user-shield"></i> Profile</li>
                    <li><i class="fas fa-mars-stroke-h"></i> Reset Password</li>
                    <li><i class="far fa-envelope"></i> Mailbox</li>
                    <li><i class="fas fa-school"></i> School Settings</li>
                    <li><i class="fas fa-sign-out-alt"></i> Logout</li>
                </ul>
            </div>
        </div>

    </div>

</header>