<!-- views/frontend/sections/teachers.ejs -->

<form action="/frontend/section/teachers" method="POST" enctype="multipart/form-data">
  <input type="hidden" name="id" value="<%= teachers?.id || '' %>">

  <!-- Title -->
  <div class="mb-3">
    <label class="required-field">Title</label>
    <input type="text" name="title" value="<%= teachers?.title || '' %>" class="form-control">
  </div>

  <!-- Teacher -->
  <div class="mb-3">
    <label class="required-field"> Start No Of Teacher</label>
    <input type="text" name="start_no_of_teacher" value="<%= teachers?.start_no_of_teacher || '0' %>"
      class="form-control">
  </div>

  <!-- Description -->
  <div class="mb-3">
    <label class="required-field">Description</label>
    <textarea name="description" class="form-control"><%= teachers?.description || '' %></textarea>
  </div>

  <!-- Photo -->
  <div class="form-group mb-3">
    <label class="form-label required-field">Photo</label>
    <div class="drag-drop-area text-center p-3 border border-2 border-dashed rounded" id="teachersPhotoDropArea"
      style="cursor: pointer;">
      <i class="fas fa-cloud-upload-alt fa-2x mb-2 text-secondary"></i>
      <p class="mb-2">Drag & Drop your photo here or click to browse</p>
      <button type="button" class="btn btn-sm btn-outline-primary"
        onclick="document.getElementById('teachersPhotoInput').click()">Select File</button>
      <input type="file" name="photo" id="teachersPhotoInput" accept="image/*" style="display: none;">
    </div>

    <div class="drop-area mt-3" id="teachersPhotoPreview">
      <% if (teachers?.photo) { %>
        <div class="preview-item position-relative d-inline-block">
          <img src="/uploads/teacher/<%= teachers.photo %>" alt="Current photo"
            style="max-width:200px; max-height:150px; border-radius:8px; border:1px solid #ddd;">
          <button type="button" class="btn btn-danger btn-sm remove-current-photo"
            style="position:absolute;top:5px;right:5px;" onclick="removeImage('teachersPhoto')">
            <i class="fas fa-times"></i>
          </button>
        </div>
        <input type="hidden" name="current_photo" value="<%= teachers.photo %>">
        <% } %>
    </div>
  </div>

  <!-- Title Text Color  -->
  <div class="mb-3">
    <label class="form-label required-field">Title Text Color</label>
    <div class="color-picker-container">
      <input type="color" class="color-input form-control form-control-color" name="title_text_color"
        value="<%= teachers.title_text_color || '#12414f' %>">
      <input type="text" class="form-control color-text-input" value="<%= teachers.title_text_color || '#12414f' %>"
        style="max-width: 120px;">
    </div>
  </div>

  <!-- Description Text Color  -->
  <div class="mb-3">
    <label class="form-label required-field">Description Text Color</label>
    <div class="color-picker-container">
      <input type="color" name="description_text_color" value="<%= teachers?.description_text_color || '#000000' %>"
        class="color-input form-control form-control-color" required>
      <input type="text" class="form-control color-text-input"
        value="<%= teachers.description_text_color || '#12414f' %>" </div>
    </div>

    <!-- Show Website Field -->
    <div class="form-check form-switch mb-3 mt-3">
      <input class="form-check-input" type="checkbox" id="showWebsiteTeachers" name="show_website" value="Enable"
        <%=teachers?.show_website==='Enable' ? 'checked' : '' %> >
      <label class="form-check-label" for="showWebsiteTeachers">Show Website</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>