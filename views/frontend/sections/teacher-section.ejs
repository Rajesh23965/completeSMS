<!-- views/frontend/sections/teacher-sections.ejs -->

<form action="/frontend/section/teacher-section" method="POST" enctype="multipart/form-data" id="teacherSectionForm">
    <input type="hidden" name="id" value="<%= teachersection?.id || '' %>">

    <!-- Page Title -->
    <div class="mb-3">
        <label class="required-field">Page Title</label>
        <input type="text" name="page_title" value="<%= teachersection?.page_title || '' %>" class="form-control">
    </div>

    <!-- ===================== Banner Photo Upload ===================== -->
    <div class="form-group mb-3">
        <label class="form-label required-field">Banner Photo</label>
        <div class="drag-drop-area text-center p-3 border border-2 border-dashed rounded"
            id="teachersSectionPhotoDropArea" style="cursor:pointer;">
            <i class="fas fa-cloud-upload-alt fa-2x mb-2 text-secondary"></i>
            <p class="mb-2">Drag & Drop your photo here or click to browse</p>
            <button type="button" class="btn btn-sm btn-outline-primary"
                onclick="document.getElementById('teacherSectionPhotoInput').click()">Select File</button>
            <input type="file" name="photo" id="teacherSectionPhotoInput" accept="image/*" style="display:none;">
        </div>

        <div class="drop-area mt-3" id="teacherSectionPhotoPreview">
            <% if (teachersection?.photo) { %>
                <div class="preview-item position-relative d-inline-block">
                    <img src="/uploads/teacher_section/<%= teachersection.photo %>" alt="Current photo"
                        style="max-width:200px; max-height:150px; border-radius:8px; border:1px solid #ddd;">
                    <button type="button" class="btn btn-danger btn-sm remove-current-photo"
                        style="position:absolute;top:5px;right:5px;" onclick="removeImage('teacherSectionPhoto')">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <input type="hidden" name="current_photo" value="<%= teachersection.photo %>">
                <% } %>
        </div>
    </div>


    <!-- Meta Keyword -->

    <div class="mb-3">
        <label class=""> Meta Keyword</label>
        <input type="text" name="meta_keyword" value="<%= teachersection?.meta_keyword || 'NA' %>" class="form-control">
    </div>

    <!-- Meta Description -->

    <div class="mb-3">
        <label class=""> Meta Description</label>
        <textarea name="meta_description" class="form-control"><%= teachersection?.meta_description || '' %></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

</form>

