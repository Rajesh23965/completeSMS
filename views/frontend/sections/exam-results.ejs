<form action="/frontend/section/exam-result" method="POST" enctype="multipart/form-data" id="examresultForm">
    <input type="hidden" name="id" value="<%= examResult?.id || '' %>">

    <!-- Title -->
    <div class="mb-3">
        <label class="required-field">Page Title</label>
        <input type="text" name="page_title" value="<%= examResult?.page_title || '' %>" class="form-control" required>
    </div>


    <div class="mb-3">
        <label class="required-field"> Description</label>
        <textarea name="description" id="description"
            class="form-control"><%= examResult?.description || '' %></textarea>
    </div>

    <!--Banner Photo -->
    <div class="form-group mb-3">
        <label class="form-label required-field">Banner Photo</label>
        <div class="drag-drop-area text-center p-3 border border-2 border-dashed rounded" id="examresultPhotoDropArea"
            style="cursor: pointer;">
            <i class="fas fa-cloud-upload-alt fa-2x mb-2 text-secondary"></i>
            <p class="mb-2">Drag & Drop your photo here or click to browse</p>
            <button type="button" class="btn btn-sm btn-outline-primary"
                onclick="document.getElementById('examresultPhotoInput').click()">Select File</button>
            <input type="file" name="photo" id="examresultPhotoInput" accept="image/*" style="display: none;">
        </div>

        <div class="drop-area mt-3" id="examresultPhotoPreview">
            <% if (examResult?.photo) { %>
                <div class="preview-item position-relative d-inline-block">
                    <img src="/uploads/exam-result/<%= examResult.photo %>" alt="Current photo"
                        style="max-width:200px; max-height:150px; border-radius:8px; border:1px solid #ddd;">
                    <button type="button" class="btn btn-danger btn-sm remove-current-photo"
                        style="position:absolute;top:5px;right:5px;" onclick="removeImage('examresultPhoto')">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <input type="hidden" name="current_photo" value="<%= examResult.photo %>">
                <% } %>
        </div>
    </div>

    <!-- Meta Keyword -->
    <div class="mb-3">
        <label class=""> Meta Keyword</label>
        <input type="text" name="meta_keyword" value="<%= examResult?.meta_keyword || '' %>" class="form-control">
    </div>

    <!-- Meta Description -->
    <div class="mb-3">
        <label class=""> Meta Description</label>
        <textarea name="meta_description" class="form-control"><%= examResult?.meta_description || '' %></textarea>
    </div>

    <!-- Print Options -->
    <div class="mb-3">
        <!-- <label class="form-label d-block">Print Options</label> -->

        <div class="form-check mb-2">
            <input class="form-check-input custom-toggle" type="checkbox" id="printAttendance" name="print_attendance"
                value="Enable" <%=examResult?.print_attendance==='Enable' ? 'checked' : '' %>>
            <label class="form-check-label ms-2" for="printAttendance">Print Attendance</label>
        </div>

        <div class="form-check">
            <input class="form-check-input custom-toggle" type="checkbox" id="printGradeScale" name="print_gradescale"
                value="Enable" <%=examResult?.print_gradescale==='Enable' ? 'checked' : '' %>>
            <label class="form-check-label ms-2" for="printGradeScale">Print Grade Scale</label>
        </div>
    </div>



    <button type="submit" class="btn btn-primary">Save</button>
</form>