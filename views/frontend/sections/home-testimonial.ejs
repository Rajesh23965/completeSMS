<!-- views/frontend/sections/home-cta.ejs -->

<form action="/frontend/section/home-testimonial" method="POST" enctype="application/x-www-form-urlencoded">

    <!-- Hidden ID for Update -->
    <input type="hidden" name="id" value="<%= htesti?.id || '' %>">

    <!-- CTA Title -->
    <div class="mb-3">
        <label class="required-field">Title</label>
        <input type="text" name="title" value="<%= htesti?.title || '' %>" class="form-control" required>
    </div>

    <!-- Description -->
    <div class="mb-3">
        <label class="required-field">Description</label>
        <input type="text" name="description" value="<%= htesti?.description || '' %>" class="form-control" required>
    </div>


    <!-- Show on Website -->
    <div class="form-check form-switch mb-3">
        <!-- FIX 1: Add hidden input to send "Disable" if the checkbox is unchecked -->
        <input type="hidden" name="show_website" value="Disable">
        <input class="form-check-input" type="checkbox" id="showWebsite" name="show_website" value="Enable"
            <%=htesti?.show_website==='Enable' ? 'checked' : '' %> >
        <label class="form-check-label" for="showWebsite">Show Website</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

</form>