<!-- views/frontend/slider/sliderList.ejs -->
<div class="slider-form">
    <div class="table-responsive ">
        <table class="table min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SN</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Photo
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"> BText1
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"> BtnUrl1
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"> BText2
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"> BUrl2
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Position
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Show</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions
                    </th>
                </tr>
            </thead>
            <div class=" d-flex justify-content-between align-items-center mb-3 p-2 border-bottom">
                <div class="d-flex align-items-center gap-2">
                    <select id="rowsPerPage" class="form-select w-auto">
                        <% [5, 10, 25, 50].forEach(option=> { %>
                            <option value="<%= option %>" <%=currentLimit===option ? "selected" : "" %>><%= option %>
                            </option>
                            <% }); %>
                    </select>
                    <span>rows per page</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <input id="searchBox" class="form-control" placeholder="Search title or description..."
                        value="<%= search || '' %>">
                </div>
            </div>
            <tbody>
                <% sliders.forEach((s, index)=> { %>
                    <tr>
                        <td class="text-center">
                            <%= s.id %>
                        </td>
                        <td class="text-center">
                            <% if (s.photo) { %>
                                <img src="/uploads/slider/<%= s.photo %>" alt="Slider Photo" class="img-rounded"
                                    style="height: 50px; object-fit: cover;">
                                <% } else { %>
                                    No Photo
                                    <% } %>
                        </td>
                        <td class="text-center">
                            <%= s.title.replace(/<[^>]*>/g, "") %>
                        </td>

                        <td class="text-center">
                            <%= s.button_text_one %>
                        </td>
                        <td class="text-center">
                            <%= s.button_url_one %>
                        </td>
                        <td class="text-center">
                            <%= s.button_text_two %>
                        </td>
                        <td class="text-center">
                            <%= s.button_url_two %>
                        </td>
                        <td class="text-center">
                            <%= s.position %>
                        </td>
                        <td id="toggle-container-<%=s.id%>">
                            <button
                                class="btn btn-sm btn-toggle-publish <%= s.show_website === 'Enable' ? 'btn-success' : 'btn-danger' %>"
                                data-id="<%=s.id%>" data-current-status="<%= s.show_website %>">
                                <i
                                    class="fas <%= s.show_website === 'Enable' ? 'fa-toggle-on' : 'fa-toggle-off' %>"></i>
                                <%= s.show_website %>
                            </button>
                        </td>

                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-primary btn-edit" data-id="<%=s.id%>">
                                    <i class="fas fa-pen-nib"></i>
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete" data-id="<%=s.id%>">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <!-- Pagination -->
        <div class="pagination-controls d-flex justify-content-end align-items-center gap-2 mt-3">
            <!-- Previous Button -->
            <a href="?page=<%= pagination.page - 1 %>&limit=<%= currentLimit %>&search=<%= search %>"
                class="btn btn-sm btn-outline-primary <%= pagination.page <= 1 ? 'disabled' : '' %>">
                <i class="fas fa-chevron-left"></i>
            </a>

            <!-- Page Info -->
            <span class="btn btn-sm btn-light">
                Page <%= pagination.page %> of <%= pagination.totalPages %>
            </span>

            <!-- Next Button -->
            <a href="?page=<%= pagination.page + 1 %>&limit=<%= currentLimit %>&search=<%= search %>"
                class="btn btn-sm btn-outline-primary <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>">
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>



    </div>
</div>