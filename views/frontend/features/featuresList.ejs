<!-- views/frontend/features/featuresList.ejs -->
<div class="feature-form">
    <div class="table-responsive ">
        <table class="table min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SN</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Icon
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"> Button
                        Text
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"> Button
                        Url
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Description
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action
                    </th>
                </tr>
            </thead>
            <div class=" d-flex justify-content-between align-items-center mb-3 p-2 border-bottom">
                <div class="d-flex align-items-center gap-2">
                    <select id="rowsPerPage" class="form-select w-auto">
                        <% [5, 10, 25, 50].forEach(option=> { %>
                            <option value="<%= option %>" <%=currentLimit===option ? "selected" : "" %>><%= option %>
                            </option>
                            <% }); %>
                    </select>
                    <span>rows per page</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <input id="searchBox" class="form-control" placeholder="Search..." value="<%= search || '' %>">
                </div>
            </div>
            <tbody>
                <% features.forEach((f, index)=> { %>
                    <tr>
                        <td class="text-center">
                            <%= f.id %>
                        </td>
                        <td class="text-center">
                            <% if (f.icon) { %>
                                <i class="<%= f.icon %> fa-2x text-primary"></i>
                                <% } else { %>
                                    <span class="text-muted">No Icon</span>
                                    <% } %>
                        </td>
                        <td class="text-center">
                            <%= f.title.replace(/<[^>]*>/g, "") %>
                        </td>

                        <td class="text-center">
                            <%= f.button_text %>
                        </td>
                        <td class="text-center">
                            <%= f.button_url%>
                        </td>
                        <td class="text-center">
                            <%= f.description%>
                        </td>

                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-primary btn-edit" data-id="<%=f.id%>">
                                    <i class="fas fa-pen-nib"></i>
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete" data-id="<%=f.id%>">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <!-- Pagination -->
        <div class="pagination-controls d-flex justify-content-end align-items-center gap-2 mt-3">
            <!-- Previous Button -->
            <a href="?page=<%= pagination.page - 1 %>&limit=<%= currentLimit %>&search=<%= search %>"
                class="btn btn-sm btn-outline-primary <%= pagination.page <= 1 ? 'disabled' : '' %>">
                <i class="fas fa-chevron-left"></i>
            </a>

            <!-- Page Info -->
            <span class="btn btn-sm btn-light">
                Page <%= pagination.page %> of <%= pagination.totalPages %>
            </span>

            <!-- Next Button -->
            <a href="?page=<%= pagination.page + 1 %>&limit=<%= currentLimit %>&search=<%= search %>"
                class="btn btn-sm btn-outline-primary <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>">
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>



    </div>
</div>