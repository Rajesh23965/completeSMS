<!-- views/frontend/faq/faqUI.ejs -->

<form id="faqForm" class="faq-form" action="/frontend/faq/save" method="POST"
    enctype="application/x-www-form-urlencoded">
    <% if (faq && faq.id) { %>
        <input type="hidden" name="id" value="<%= faq.id %>">
        <% } %>

            <div class="form-group mb-3">
                <label for="title" class="form-label ">Title</label>
                <input type="text" id="title" name="title" class="form-control" value="<%= faq.title || '' %>"
                    required>
            </div>
            <div class="form-group mb-3">
                <label for="description" class="form-label required-field">Description</label>
                <textarea id="description" name="description" class="form-control" rows="3"
                    required><%= faq.description || '' %></textarea>
            </div>



            <button type="submit"
                class="btn btn-primary bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                Save
            </button>
</form>