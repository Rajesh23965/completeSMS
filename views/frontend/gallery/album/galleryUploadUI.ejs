<!-- views/frontend/gallery/album/galleryUploadUI.ejs -->
<div class="card shadow rounded p-4 border-0">
    <form id="albumForm" action="/frontend/gallery/album" method="POST" enctype="multipart/form-data">

        <% if (typeof galleryUpload !=='undefined' && galleryUpload.id) { %>
            <input type="hidden" name="id" value="<%= galleryUpload.id %>">
            <% } %>

                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        <label for="title" class="form-label fw-bold">Album Title <span
                                class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="title" name="title"
                            value="<%= typeof galleryUpload !== 'undefined' && galleryUpload.title ? galleryUpload.title : '' %>"
                            required>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="category_id" class="form-label fw-bold">Category <span
                                class="text-danger">*</span></label>
                        <select class="form-select" id="category_id" name="category_id" required>
                            <option value="">Select Category</option>
                            <option value="1" selected>Example Category 1</option>
                            <option value="2">Example Category 2</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label fw-bold">Description</label>
                    <textarea class="form-control" id="description" name="description"
                        rows="3"><%= typeof galleryUpload !== 'undefined' && galleryUpload.description ? galleryUpload.description : '' %></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Thumbnail Image</label>
                    <div id="galleryPhotoDropArea" class="border rounded p-4 text-center cursor-pointer"
                        style="border-style: dashed!important; background-color: #f8f9fa;">
                        <i class="fas fa-cloud-upload-alt fa-3x text-secondary mb-2"></i>
                        <p class="mb-1 text-secondary">Drag and drop a file here or click</p>
                        <input type="file" id="galleryPhotoInput" name="thumbimage" accept="image/*" class="d-none">
                    </div>

                    <div id="galleryPhotoPreview" class="mt-3 text-center">
                        <% if (typeof galleryUpload !=='undefined' && galleryUpload.thumbimage) { %>
                            <div class="position-relative d-inline-block">
                                <img src="/uploads/gallery/<%= galleryUpload.thumbimage %>" alt="Current Thumb Image"
                                    style="max-width:200px; border-radius:8px; border:1px solid #ddd;">
                                <button type="button" class="btn btn-danger btn-sm position-absolute"
                                    style="top:5px; right:5px;"
                                    onclick="document.getElementById('galleryPhotoInput').value=''; this.parentNode.parentNode.innerHTML=''">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <input type="hidden" name="current_thumbimage" value="<%= galleryUpload.thumbimage %>">
                            <% } %>
                    </div>
                </div>

                <div class="mb-4 form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="show_website" name="show_website" value="Enable"
                        <% if (typeof galleryUpload !=='undefined' && galleryUpload.show_website==='Enable' ) { %>
                    checked <% } %>
                        style="transform: scale(1.2);">
                        <label class="form-check-label fw-bold" for="show_website">Show on Website</label>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>
                        <%= typeof galleryUpload !=='undefined' && galleryUpload.id ? 'Update Album' : 'Create Album' %>
                    </button>
                </div>
    </form>
</div>